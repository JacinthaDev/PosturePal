    <div class ="popUp hidden">
        <div class="timeToStretch">
            <div class="stretch-image-container">
                <h2>It's time to stretch!</h2>
                <div class="countdown">
                    <span class = "clear">00:</span>
                    <span class="countdown-timer">30</span>
                    <span class="timesUp"></span>
                </div>            
                <img class="popUpStretch" src="" alt="">
                <p class="overlay-text"></p>
            </div>
            <div class="button-container">
                <button class="btn skip" id="skip"><span class="icon">✕</span> Stretch Later</button>
                <button class="btn stretch"><span class="icon">✔</span> Stretch</button>
                <button class="btn restart hidden">Restart</button>
                <button class="btn exit hidden">Exit</button>
            </div>
        </div>
