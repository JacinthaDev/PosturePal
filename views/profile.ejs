                <div class="countdown">
                    <span class = "clear">01:</span><span class="countdown-timer">00</span>
                    <span class="timesUp"></span>
                </div>            
                <img class="popUpStretch" src="../imgs/cowface.gif" alt="">
                <p class="overlay-text"></p>
            </div>
            <div class="button-container">
                <form action="/editStreak/skip?_method=PUT" method="POST">
                    <button class="btn skip"><span class="icon">✕</span> Skip</button>
                </form>
                <!-- <form action="/editStreak/stretch?_method=PUT" method="POST"> -->
                    <button class="btn stretch"><span class="icon">✔</span> Stretch</button>
                    <button class="btn restart hidden">Restart</button>
